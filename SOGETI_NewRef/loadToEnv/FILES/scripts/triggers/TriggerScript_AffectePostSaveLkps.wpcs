	affecteScriptPostSave("Lkp_NewRef_CompetenceTraction", "LkpPostSaveScript_Lkp_NewRef_CompetenceTraction");
	affecteScriptPostSave("Lkp_NewRef_EquipeTrain", "LkpPostSaveScript_Lkp_NewRef_EquipeTrain");
	affecteScriptPostSave("Lkp_NewRef_EquipeTraction", "LkpPostSaveScript_Lkp_NewRef_EquipeTraction");
	affecteScriptPostSave("Lkp_NewRef_FamilleAgent", "LkpPostSaveScript_Lkp_NewRef_FamilleAgent");
	affecteScriptPostSave("Lkp_NewRef_NumRecette", "LkpPostSaveScript_Lkp_NewRef_NumRecette");
	affecteScriptPostSave("Lkp_NewRef_PointDeVente", "LkpPostSaveScript_Lkp_NewRef_PointDeVente");
