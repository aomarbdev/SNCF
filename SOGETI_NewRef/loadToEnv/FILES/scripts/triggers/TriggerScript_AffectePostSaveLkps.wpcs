/// Cette fonction permet d'affecter un script post save à une lookup.
/// @param sScriptName Nom du script post save
/// @param sLkpName Nom de la lookup à laquelle on veut associer le script 
//:GLFUNCTION affecteScriptPostSave(String sLkpName, String sScriptName)
function affecteScriptPostSave(sLkpName, sScriptName)
{
	var properties = [];
	
	properties["POST_SAVE_SCRIPT_NAME"] = sScriptName;
	
	getCtgByName(sLkpName).setContainerProperties(properties);   
}

function doAffecteLkpScripts() {
	
	affecteScriptPostSave("Lkp_NewRef_UO", "LkpPostSaveScript_Lkp_NewRef_UO");
	affecteScriptPostSave("Lkp_NewRef_Residence", "LkpPostSaveScript_Lkp_NewRef_Residence");
